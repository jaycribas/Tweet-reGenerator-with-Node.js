extends layout

block content
    nav
      a.nav-link(
        href='/'
      ) Back to Home

    main
      h2 Stored Tweets
      table.tweets.datatable
        thead
          tr
            th Stored Tweet
            th Last Sent On...
        tbody
          each twit in tweets
            tr
              td= twit.tweet
                form(
                  action='/dbretweet/' + twit.id_str
                  method='post'
                )
                  button.retweet(
                    type='submit'
                  )
                    i.fa.fa-retweet
              td= twit.last_sent

    script.
      $('.tweets').DataTable( {
      'iDisplayLength': 50,
      'aaSorting': [1,'desc']
      });
      $('.dataTables_filter input').attr("placeholder", "search");
