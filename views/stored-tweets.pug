extends layout

block content

    main
      table.tweets.datatable.table.table-striped.table-bordered(cellpadding='0', cellspacing='0', border='0')
        thead
          tr
            th saved tweets
        tbody
          for twit in tweets
            tr
              td= twit.tweet
                form(
                  action='/retweet/' + twit.id_str
                  method='post'
                )
                  button.retweet(
                    type='submit'
                  )
                    i.fa.fa-retweet

    script.
      $('.tweets').DataTable( {
      'iDisplayLength': 50
      });
      $('.dataTables_filter input').attr("placeholder", "search");
